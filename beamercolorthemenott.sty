% ====================
% Definitions
% ====================

% Colors from https://www.cam.ac.uk/brand-resources/guidelines/typography-and-colour/rgb-and-hex-references
\definecolor{usfGreen}{RGB}{0, 103, 71}

% Extra colors
\definecolor{usfGold}{RGB}{ 207, 196, 147}
\definecolor{usfGoldlight}{RGB}{237, 235, 209}
\definecolor{usfGreenlight}{RGB}{220,231,201}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=usfGreen}

% Headline
\setbeamercolor{headline}{fg=white,bg=usfGreen}

% Block
\setbeamercolor{block title}{fg=usfGreen,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=usfGreen,bg=usfGreenlight}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=usfGreenlight}

% Example Block
\setbeamercolor{block example title}{fg=usfGreen,bg=usfGoldlight}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=usfGoldlight}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=usfGreen}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
